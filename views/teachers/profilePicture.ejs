    <div class="left">
    
      <img style="position: relative; left: 15px;" src="/images/teacher/<%=user.file %>"  class="roundpp img-fluid" alt="Profile Picture" ><br>
      <button style="position: relative; left: 25px; top: 8px;" type="button" class="btn btn-warning" data-toggle="modal" data-target="#profilepicture"title="Edit-Profile" >Change Profile Picture</button>
     
    </div>

   
  
  
      
  
      <!-- Modal -->
      <div class="modal fade" id="profilepicture" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Update Profile Picture</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
          
                  <form class="mt-3" action="/teacher/profilepicture" method="POST"enctype="multipart/form-data">
  
                      <img src="" style="display: none;" width="200px" id="image">
  
                      <br>
                      <div class="upload-btn-wrapper">
                        <input  type="file" name="file"  onchange="showImage.call(this)">
                      </div>
                      <!-- <div class="red"><i>(Max Image Size: 5MB)</i></div> -->
                        <br>
                      <script>
                        function showImage()
                        {
                          if(this.files && this.files[0])
                          {
                            var obj = new FileReader();
                            obj.onload = function(data){
                              var image = document.getElementById("image");
                              image.src = data.target.result;
                              image.style.display = "block";
                  
                            }
                            obj.readAsDataURL(this.files[0])
                          }
                        }
                      </script>
  
                      <button class="py-3 mt-4 btn btn-lg btn-warning btn-block">Update Now</button>
  
                  </form>
  
            </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              </div>
          </div>
        </div>
      </div>
  
  




  
  