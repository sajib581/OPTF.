<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>OPTF || Parents</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
  <link rel="stylesheet" href="/main.css">

</head>
<body>
  <header class="header-bar mb-3";>
    <div class="container d-flex flex-column flex-md-row align-items-center p-3">
      <h4 class="my-0 mr-md-auto font-weight-normal"><a href="/" class="text-white"><img src="../../images/logo/logo.jpg" width="80px" alt="LOGO"></a></h4>
      <div class="flex-row my-3 my-md-0">
        <a href="/search" class="text-white mr-2 header-search-icon" title="Search" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-search"></i></a>

       <% if(type == "teacher"){ %>

        <a href="/parents" class="text-white mr-2 header-search-icon" title="Parents" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-user-friends"></i></a>
 
       <% } else{ %>

        <a href="#" class="text-white mr-2 header-search-icon" title="Teachers" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-user-graduate"></i></a>

        
      <% }  %>
      
      <a href="/friends" class="text-white mr-2 header-search-icon" title="Friends" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-users"></i></a>   
      <a href="/about" class="text-white mr-2 header-search-icon" title="About Us" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-handshake"></i></a>

      <a href="/logout" class="text-white mr-2 header-search-icon" title="Sign Out" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-sign-out-alt"></i></a>
     
      </div>     
    </div>
  </header>

    <% if(users.length){ %>

       <% users.forEach(function(user){ %>

       

  <div class="container py-md-5 ">

    <div class="example2">

     <a href="/profile/<%=user.username%>">

    <div class="left" >
      <br>
     <img src="/images/parent/<%= user.file %>" class="roundpp img-fluid" width="180px" alt="Profile Picture">  
    </div>
    
       <div class="left1" >
         <br>
          <p> 
            Name: <%= user.firstname %> <%= user.lastname %> <br>
            Gender: <%= user.gender %> <br>
            Location: <%= user.address %>, <%=user.city%> <br>
            Overview: <%= user.overview %> <br>
          </p>
        </div>
        <br>

      <div class="body-content normal">
        <br>
       <h2>Tuition Information</h2>
       <hr>
       <div class="dot">
        <p> 
         <b> Class(s)</b>: <span style="text-transform: uppercase;" > <%= user.classes %></span> <br>
          <b>Subject(s):</b> <span style="text-transform: uppercase;"> <%= user.subjects %> </span> <br>
          <b>Medium:</b> <%= user.medium %> <br>
          <b>Salary</b> <%= user.salary %> <br>
        </p>
       </div>

      </div>

      <br>

 
    </div>
    </a> 
    </div>
    </div>
  

       <% }) %>

        <!-- footer begins -->
  <%- include('includes/footer') %>
    
  <% } else { %>
    <br>
    <br>
    <div class="text-center">
        <h2>Sorry</h2>
        <p class="lead text-muted">No parents are available.</p>
    </div>  
  
 <!-- footer begins -->
<footer class="fixed-bottom border-top text-center small text-muted py-3">

  <p class="m-0">Copyright &copy; 2020 <a href="/" class="text-muted">OPTF</a>. All rights reserved.</p>
  </footer>
  
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <script>$('[data-toggle="tooltip"]').tooltip()</script>
</body>
</html>

    <% } %>


