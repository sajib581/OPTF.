<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>OPTF || Sign Up</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
    <!-- Font Icon -->
    <link rel="stylesheet" href="/signup/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/signup/css/style.css">
</head>
<body>

    <div class="main">

        <div class="container">
            <form action="/register" method="POST" class="appointment-form" id="appointment-form">
                <h2>Sign Up</h2>
                
                <% if(regErrors.length){ %>
                    <% regErrors.forEach(function(message) { %>
                        <div class="alert alert-danger small"><%= message %></div>
                      <% }) %>
                <%} %>
				

                <div class="form-group-1">
                    <label style="color: black;" for="">Sign-Up As </label> 
                    <select  name="type" id="type" required >
                        <option value="teacher">Teacher</option>
                        <option value="parents">Parent</option>
                    </select>

                    <label style="color: black;" for="">Your Location </label> 
                    <select  name="address" id="type" required >
                        <option value="chashara">Chashara</option>
                        <option value="amlapara">Amlapara</option>
                        <option value="nitaigonj">Nitaigonj</option>
                        <option value="jalkuri">Jalkuri</option>
                        <option value="bhuigor">Bhuigor</option>
                        
                    </select>
                   
					<input type="text" name="username" id="name" placeholder="Username" required autocomplete="off" />
					<input type="password" name="password" id="password" placeholder="Password" required autocomplete="off" />
                    <input type="email" name="email" id="email" placeholder="Email" required autocomplete="off"/>
                    <input type="text" name="firstname" id="title" placeholder="First Name" required autocomplete="off"/>
                    <input type="text" name="lastname" id="title" placeholder="Last Name" required autocomplete="off" />
                    <input type="tel" name="phone" id="phone_number" placeholder="Phone : 16xxxxxx" required autocomplete="off"/>
                    <select  name="gender" id="type" required >
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
				</div>
				
	
            
                <div class="form-submit">

                    <button class="btn btn-warning">Sign Up</button>

                    <!-- <input type="submit" name="submit" id="submit" class="submit" value="Sign Up" /> -->
				
				</div>
            </form>
        </div>

    </div>

    <!-- JS -->
    <script src="/signup/vendor/jquery/jquery.min.js"></script>
    <script src="/signup/js/main.js"></script>
</body>
</html>