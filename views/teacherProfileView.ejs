<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>OPTF || <%=username%>'s profile</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
  <link rel="stylesheet" href="/main.css">


</head>
<body>
  <header class="header-bar mb-3";>
    <div class="container d-flex flex-column flex-md-row align-items-center p-3">
      <h4 class="my-0 mr-md-auto font-weight-normal"><a href="/" class="text-white"><img src="../../images/logo/logo.jpg" width="80px" alt="LOGO"></a></h4>
      <div class="flex-row my-3 my-md-0">
        <a href="/search" class="text-white mr-2 header-search-icon" title="Search" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-search"></i></a>
    
        <% if(user == "teacher"){ %>

        <a href="#" class="text-white mr-2 header-search-icon" title="Parents" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-user-friends"></i></a>
 
       <% } else{ %>

        <a href="/teachers" class="text-white mr-2 header-search-icon" title="Teachers" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-user-graduate"></i></a>

        
      <% }  %>

      <a href="/friends" class="text-white mr-2 header-search-icon" title="Friends" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-users"></i></a>   
      <a href="/about" class="text-white mr-2 header-search-icon" title="About Us" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-handshake"></i></a>
    
      <a href="/logout" class="text-white mr-2 header-search-icon" title="Sign Out" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-sign-out-alt"></i></a>
     
      </div>     
    </div>
  </header>

  
  <div class="container py-md-5">

    <% errors.forEach(function(message) { %>
      <div class="alert alert-danger text-center"><%= message %></div>
    <% }) %>
    
    <% success.forEach(function(message) { %>
      <div class="alert alert-success text-center"><%= message %></div>
    <% }) %>
  
    <div class="example2">

      <%  if(friend){ %>

          <a href="/unfriend/<%=username%>"> <button type="button" class=" btn-success py-3 mt-4 btn btn-lg  btn-block">(+880) <%=phone %></button></a>
          
      <%  } else if (request){ %>

        <a href="/cancle/<%=username%>"> <button type="button" class=" btn-danger py-3 mt-4 btn btn-lg  btn-block">Cancel Request</button></a>
    

        <%  } else if (pending){ %>

          <a href="/accept/<%=username%>"> <button type="button" class=" btn-warning py-3 mt-4 btn btn-lg  btn-block">Accept Request</button></a>
      
  
          <% } else { %>

            <a href="/add/<%=username%>"> <button type="button" class=" btn-info py-3 mt-4 btn btn-lg  btn-block">Add Request</button></a>


          <% } %>

       

      
   
    <div class="left" >
      <br>
      <img src="/images/teacher/<%=file%>" class="roundpp img-fluid" width="180px" alt="Profile Picture">
    </div>
    
       <div class="left1" >
         <br>
          <p> 
            Name: <%= firstname %> <%= lastname %> <br>
            Gender: <%= gender %> <br>
            Location: <%= address %>, <%=city%> <br>
            Overview: <%= overview %> <br>
          </p>
        </div>
        <br>

      <div class="body-content normal">
        <br>
       <h2>Tuition Information</h2>
       <hr>
       <div class="dot">
        <p> 
          <b>Class(s):</b> <span style="text-transform: uppercase;" > <%= classes %></span> <br>
         <b> Subject(s):</b> <span style="text-transform: uppercase;"> <%= subjects %> </span> <br>
          <b>Medium:</b> <%= medium %> <br>
          <b>Salary (in Taka):</b> <%= salary %> <br>
          <b>Experience: </b><%= experience %> <br>
        </p>
       </div>

      </div>

      <div>
       <br>
        <h2>Educational Information</h2>
        <hr>
        <div class="dot">
          <p> 

           <b> Level of Education (completed) :</b> <%= educationLevel %> <br>

            <b>Educational Background : </b><%= educationalBackground %> <br>

            <b>Institute Name: </b><%= instituteName %> <br>

          <b>  CGPA/GPA : </b><%= result %> <br>

            <b>Passed Year :</b> <%= passed %> <br>

          </p>
         </div>
      </div>

    <br>
       <!-- report -->
    
        <%- include('includes/report') %>
  








  <!-- footer begins -->
  <%- include('includes/footer') %>